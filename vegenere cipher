#include<stdio.h>
#include<string.h>
int main()
{

int key[500],asci[500],lengthm,lengthk,option,x,y,z,a;
char massage[500],keyword[50];

printf("enter your massage\n");
gets(massage);
lengthm=strlen(massage);
printf("\nenter 1 to encryption,2 to decryption\n");
scanf("%d",&option);
printf("\nenter a secreat keyword\n");
scanf("%s",keyword);
lengthk=strlen(keyword);



for(x=0;x<lengthm;x++){
    for(y=0;y<lengthk;y++){
        key[x]=keyword[y];
        x=x+1;

    }
}


if(option==1){
    for(x=0,a=0;x<lengthm;x++){

        asci[x]=massage[x];





        if(islower(massage[x])){
            asci[x]=asci[x]+key[a];

            if(asci[x]>122){
                while(asci[x]>122){
                        z=0;
                    for(y=123;y<=asci[x];y++){
                        z=z+1;
                    }
                    asci[x]=96+z;

                }
            }
            a=a+1;
        }
        
        
        
        else if(isupper(massage[x])){
        	asci[x]=asci[x]+key[a];
        	if(asci[x]>90){
        		while(asci[x]>90){
        			z=0;
        			for(y=90;y<=asci[x];y++){
        				z=z+1;
					}
					asci[x]=64+z;
					
				}
			}
			a=a+1;
		}

}

}


if(option==2){
    for(x=0,a=0;x<lengthm;x++){
    	
        asci[x]=massage[x];


        if(islower(massage[x])){
            asci[x]=asci[x]-key[a];
            if(asci[x]<97){
                
                while(asci[x]<97){
                	z=0;
                    for(y=asci[x];y<97;y++){
                        z=z+1;
                    }
                     asci[x]=123-z;

                }
            }
             a=a+1;


        }
        
        
       else if(isupper(massage[x])){
       	asci[x]=asci[x]-key[a];
       	if(asci[x]<65){
       		while(asci[x]<65){
       			z=0;
       			for(y=asci[x];y<=65;y++){
       				z=z+1;
       				
				   }
				   asci[x]=91-z;
			   }
		   }
		   a=a+1;
	   }

    }

}

printf("\n\n");


for(y=0;y<lengthm;y++){
    printf("%c",asci[y]);
    

}


}
